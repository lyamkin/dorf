{% extends "master.html.twig" %} {% block title %}Advertisment details{%
endblock %} {% block content %} {% if flashMessage %}
<div class="container">
  <div
    class="alert alert-warning alert-dismissible fade show mt-4"
    role="alert"
  >
    {{ flashMessage }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{% endif %} {% if errorList %}
<div class="container pt-4">
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    {% for error in errorList %}
    <p>{{ error }}</p>
    {% endfor %}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{% endif %}
<div class="container my-4">
  <div class="row">
    <div class="col-lg-8">
      <p class="font-weight-bold h2">{{ advertisement.title }}</p>
      <p class="lead">CAD {{ advertisement.price }}</p>
      <div class="addetail-container">
        <img
          src="/adimg/{{ advertisement.advId }}"
          alt="{{ advertisement.title }}"
          class="img-fluid"
        />
      </div>
      <p class="h3">Description</p>
      <p>{{ advertisement.description }}</p>
    </div>

    <div class="col col-lg-4">
      <div class="card mt-4">
        <div class="card-body">
          <p>
            <span class="font-weight-bold">User posted: </span
            >{{ advertisement.name }}
          </p>
          <p>
            <span class="font-weight-bold">Posted: </span
            >{{ advertisement.creationTS }}
          </p>
          <p>
            <span class="font-weight-bold">Visits: </span
            >{{ advertisement.visits }}
          </p>
        </div>
      </div>
      <div class="card mt-4">
        <div class="card-body">
          <form
            method="POST"
            enctype="multipart/form-data"
            id="adsSendMessageForm"
          >
            <div class="form-group text-muted">
              <label for="message">Message</label>
              <textarea
                class="form-control"
                id="message"
                rows="3"
                name="message"
                >{{ message }}</textarea
              >
            </div>
            <div class="modal-footer">
              <input
                type="submit"
                value="Send a message"
                class="btn btn-success-olive"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock content %} {% block scripts %}
<script src="../js/adsFormValidation.js"></script>
{% endblock scripts %}
