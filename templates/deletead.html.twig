{% extends "master.html.twig" %} {% block title %}Delete Ad{% endblock %} {%
block content %}
<div class="container">
  <h4 class="mt-4">Delete Ad</h4>
  <div class="row">
    <div class="col col-sm-8 offset-sm-2">
      <div class="card my-4">
        <img
          src="/adimg/{{ ad.advId }}"
          class="card-img-top img-thumbnail"
          alt="{{ ad.title }}"
        />
        <div class="card-body">
          <h5 class="card-title">{{ ad.title }}</h5>
          <p class="card-text">Price: {{ ad.price }}</p>
          <p class="card-text">Number of visits: {{ ad.visits }}</p>
          <a
            href="/addetails/{{ ad.advId }}"
            class="btn btn-success-olive viewdetaild"
            >View</a
          >
        </div>
        <div class="card-footer">
          <p class="lead">Please confirm this action. It is irreversible</p>
          <div class="row">
            <div class="col">
              <form method="POST">
                <input
                  class="btn btn-danger"
                  type="submit"
                  value="Yes, delete this ad"
                />
              </form>
            </div>
            <div class="col">
              <a href="/ads">Cancel - go back to the list</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
