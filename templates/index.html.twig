{% extends "master.html.twig" %} {% block title %}Home page{% endblock %} {%
block content %} {% if flashMessage %}
<div class="container">
  <div
    class="alert alert-warning alert-dismissible fade show mt-4"
    role="alert"
  >
    {{ flashMessage }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{% endif %}

<div class="container">
  <div class="row mt-4">
    <div class="col">
      <div class="card mb-3">
        <div class="card-body">
          <h1 class="card-title">Summer is Here!</h1>
          <p class="card-text">Need a helping hand?</p>
          <a href="/categories" class="btn btn-success-olive">Read more</a>
        </div>
        <img class="card-img-top" src="/img/tomate.jpg" alt="Card image cap" />
      </div>
    </div>
  </div> 

  <hr />

  <div class="row">
    <div class="col">
      <div class="card mt-4 mx-auto" style="width: 20rem; height: 20rem">
        <img class="card-img-top" src="/img/home.jpg" alt="Card image cap" />
        <div class="card-body d-flex flex-column">
          <p class="card-text text-center mt-auto">
            <a
            href="/categories"
            class="btn btn-success-olive mt-auto"
            >Spruce up your home!</a>
          </p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card mt-4 mx-auto" style="width: 20rem; height: 20rem">
        <img class="card-img-top" src="/img/pets.png" alt="Card image cap" />
        <div class="card-body d-flex flex-column">
          <p class="card-text text-center mt-auto">
            <a
            href="/categories"
            class="btn btn-success-olive"
            >Looking for a new furry friend?</a>
          </p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card mt-4 mx-auto" style="width: 20rem; height: 20rem">
        <img class="card-img-top" src="/img/car.jpeg" alt="Card image cap" />
        <div class="card-body d-flex flex-column">
          <p class="card-text text-center mt-auto">
            <a
            href="/categories"
            class="btn btn-success-olive"
            >Car in need of a little TLC?</a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <hr />

  <div class="card text-center signInCard">
    <div class="card-body">
      <h5 class="card-title">Dorf is better when you're a member</h5>
      <p class="card-text">
        Contact other members, list yor own ads, and more!
      </p>
      <a href="/login" class="btn btn-white">Sign In</a>
    </div>
  </div>

  <hr />

  <div class="row">
    <div class="col">
      <h4>What's popular right now</h4>
    </div>
  </div>

  <div class="row mt-2">
    {% for ad in advertisements %}
    <div class="col col-12 col-md-4 card-deck">
      <div class="card my-4">
        <img src="/adimg/{{ ad.advId }}" class="card-img-top img-thumbnail" alt="ad image"/>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{ ad.title }}</h5>
          <p class="card-text">Price: {{ ad.price }}</p>
          <p class="card-text">Number of visits: {{ ad.visits }}</p>
            <a
            href="/addetails/{{ ad.advId }}"
            class="btn btn-success-olive mt-auto"
            >View Ad</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% endblock %} {% block scripts %}
<script>
  $("input[name=name]").on("paste blur change input", function () {
    var name = $("input[name=name]").val();
    $("#nameValidity").load("/isnamevalid/" + name);
  });



</script>
{% endblock scripts %}
