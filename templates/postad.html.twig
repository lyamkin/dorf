{% extends "master.html.twig" %} {% block title %}Post Ad{% endblock %} {% block
content %} {% if errorList %}
<div class="container pt-4">
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    {% for error in errorList %}
    <p>{{ error }}</p>
    {% endfor %}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{% endif %}
<div class="container">
  <div class="row">
    <div class="col">
      <form
        method="POST"
        enctype="multipart/form-data"
        class="mx-5 my-4 px-5 py-5 border"
        id="postAdForm"
      >
        {% if op == 'edit' %}
        <h3 class="text-center form-text text-muted">
          Edit your Advertisement!
        </h3>
        {% else %}
        <h3 class="text-center form-text text-muted">Post an Advertisement!</h3>
        {% endif %}
        <div class="form-group text-muted">
          <label for="title">Title:</label>
          <input
            type="text"
            class="form-control"
            name="title"
            id="title"
            value="{{ v.title }}"
          />
        </div>
        <div class="form-group text-muted">
          <label for="category">Category</label>
          <select class="form-control" id="category" name="category">
            {% for category in categories %}
            <option value="{{ category.categoryId }}">
              {{ category.category }}
            </option>
            {% endfor %}
          </select>
        </div>
        <div class="form-group text-muted">
          <label for="description">Description</label>
          <textarea
            class="form-control"
            id="description"
            rows="3"
            name="description"
            >{{ v.description }}</textarea
          >
        </div>
        <div class="form-group text-muted">
          <label for="price">Price:</label>
          <input
            type="text"
            class="form-control"
            name="price"
            id="price"
            value="{{ v.price }}"
          />
        </div>
        <div class="form-group text-muted">
          <div class="custom-file">
            <input
              type="file"
              class="custom-file-input"
              id="image"
              name="image"
            />
            <label class="custom-file-label" for="image">Choose file</label>
          </div>
        </div>

        {% if op == 'edit' %}
        <div class="form-group text-muted">
          <label for="status">Status</label>
          <select class="form-control" id="status" name="status">
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
          </select>
        </div>
        {% endif %}

        <button type="submit" class="btn btn-success-olive">
          {% if op == 'edit' %}Edit Ad!{% else %}Post Ad!{% endif %}
        </button>
      </form>
    </div>
  </div>
</div>
{% endblock content %} {% block scripts %}
<script src="/../js/postadFormValidation.js"></script>
{% endblock scripts %}
